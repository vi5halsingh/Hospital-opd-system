<section>
  <%- include('../partials/sidebar') %>
<h2>Doctors</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialty</th>
      <th>Contact</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% doctors.forEach(doctor => { %>
      <tr>
        <td><%= doctor.firstName %> <%= doctor.lastName %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.contactInfo.phone %></td>
        <td>
          <a href="/admin/doctors/<%= doctor._id %>" class="btn btn-info btn-sm">View</a>
          <a href="/admin/doctors/delete/<%= doctor._id %>" class="btn btn-danger btn-sm">Remove</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
</section>
