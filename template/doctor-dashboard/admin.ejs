<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doctor Dashboard</title>
  <link rel="stylesheet" href="/doctors/style.css">
  <link rel="stylesheet" href="/doctors/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<style>
  /* Reviews Section */
  .reviews {
    border-top: 1px solid #ddd;
    padding: 20px 0;
  }

  .reviews h2 {
    margin-bottom: 15px;
    font-size: 18px;
    font-weight: 500;
  }

  /* Add Your Review Form */
  .add-your {
    width: 100%;
    display: flex;
    margin-bottom: 15px;
    gap: 10px;
  }

  .add-your input[type="text"] {
    flex: 1;
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 3px;
    font-size: 16px;
    outline: none;
    min-width: 0;
  }

  .add-your button[type="submit"] {
    background-color: #337ab7;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
    white-space: nowrap;
  }

  .add-your button[type="submit"]:hover {
    background-color: #286090;
  }

  /* Review Card */
  .review-card {
    margin-bottom: 10px;
    padding: 5px;
    border-radius: 3px;
    background-color: #f5f5f5;
  }

  .review-card img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 15px;
  }

  .reviewerInfo {
    display: flex;
    align-items: center;
    font-size: 1rem;
    font-weight: 700;
    flex-wrap: wrap;
    gap: 10px;
  }

  .review-content {
    width: 90%;
    border-radius: 5px;
    margin: 0 auto;
    padding-left: 20px;
  }

  .review-card p {
    font-size: 1.2rem;
    color: black;
    margin: 0;
    word-wrap: break-word;
  }
  
  /* Enhanced Responsive Design */
  @media (min-width: 1200px) {
    .reviews {
      padding: 30px 0;
    }
    
    .reviews h2 {
      font-size: 22px;
    }
    
    .review-card img {
      width: 60px;
      height: 60px;
    }
    
    .review-content {
      padding-left: 30px;
    }
    
    .review-card p {
      font-size: 1.3rem;
    }
  }
  
  @media (min-width: 992px) and (max-width: 1199px) {
    .reviews h2 {
      font-size: 20px;
    }
    
    .review-card img {
      width: 55px;
      height: 55px;
    }
  }
  
  @media (max-width: 768px) {
    .reviews {
      padding: 15px 0;
    }
    
    .reviews h2 {
      font-size: 16px;
      margin-bottom: 10px;
    }
    
    .add-your {
      flex-direction: column;
      gap: 10px;
    }
    
    .add-your input[type="text"] {
      width: 100%;
      padding: 12px;
      font-size: 16px;
    }
    
    .add-your button[type="submit"] {
      width: 100%;
      padding: 12px;
      font-size: 16px;
    }
    
    .reviewerInfo {
      font-size: 0.9rem;
      flex-direction: column;
      align-items: flex-start;
    }
    
    .review-card img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      margin-bottom: 5px;
    }
    
    .review-content {
      width: 100%;
      padding-left: 10px;
    }
    
    .review-card p {
      font-size: 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .reviews h2 {
      font-size: 14px;
    }
    
    .add-your input[type="text"],
    .add-your button[type="submit"] {
      padding: 10px;
      font-size: 14px;
    }
    
    .reviewerInfo {
      font-size: 0.8rem;
    }
    
    .review-card img {
      width: 35px;
      height: 35px;
    }
    
    .review-card p {
      font-size: 0.9rem;
    }
    
    .review-content {
      padding-left: 5px;
    }
  }
</style>

<body>
  <div class="container">
    <div class="sidebar">
      <div class="sidebar-header">



      </div>
      <ul class="sidebar-menu">
        <li><a href="/api/staff">Profile</a></li>
        <li><a href="/api/New-Appointments">Appointments <sup style="color: red;font-weight: bold;">
              <%= newAppoint.length %>
            </sup></a></li>
        <li><a href="/api/patient-record">Patient Records</a></li>
        <li><a href="/comming-soon">Telehealth Integration</a></li>
        <li><a href="/api/doctor/add-staff">Your staff</a></li>
        <li id="logout">Log Out</li>
        <!-- <button onClick={handleLogout}>Logout</button> -->

      </ul>
    </div>

    <div class="content-area">
      <div class="hamburger">
        <i class="fas fa-bars close"></i>
        <i class="fa-solid fa-xmark open" style="display: none;"></i>

      </div>
      <!-- Profile Section -->
      <div class="sidebar-content" id="content1">
        <div class="profile-container">
          <div class="profile-header">
            <%- include('../partials/profilePhoto') %>
              <div class="profile-details">
                <h2>Dr. <%= doctor.firstName %>
                    <%= doctor.lastName %>
                </h2>
                <p>
                  <%= doctor.specialty%>
                </p>
              </div>
          </div>
          <div class="profile-info">
            <p><strong>Specialization:</strong>
              <%= doctor.specialty%>
            </p>
            <p><strong>Education: </strong>
              <%= doctor.degree%>
            </p>
            <p><strong>Experience:</strong>
              <%= doctor.experience%> year
            </p>
            <p><strong>Location: </strong>
              <%= doctor.address%>
            </p>
            <p><strong>Contact: </strong>
              <%= doctor.phoneNumber%>
            </p>
          </div>
        </div>
      </div>
      <!-- Reviews Section -->
      <div class="reviews">
        <h3>What people say</h3>

        <% reviewInfo.forEach((data)=> { %>

          <div class="review-card">
            <div class="reviewerInfo">
              <img src="<%= data.review_imageUrl ? data.review_imageUrl: '/main page/asset/defalut user.jpg' %>"
                alt="pic">
              <%= data.review.createdBy.firstName %>
                <%= data.review.createdBy.lastName %>
            </div>
            <div class="review-content">
              <p>
                <%= data.review.content %>
              </p>
            </div>
          </div>

          <%})%>


      </div>
      <script>
        const socket = io();

        const doctorId = "<%= doctor._id %>"; // Pass the logged-in doctor's ID dynamically from the server
        socket.on(`doctor-${doctorId}`, (data) => {
          console.log("New appointment notification:", data.message);
          alert(data.message);
        });
      </script>
      <script src="/doctors/admin.js"></script>
</body>

</html>