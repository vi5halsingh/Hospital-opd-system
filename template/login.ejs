        <i class="ri-eye-off-fill" style="position: absolute;
        top: 65%;right: 2%" id="hide"></i>
       <div class="error-message" id="errorMessage" style="color:rgb(233, 7, 7)"></div>
      </div>
            <div class="forgot-password">
      <div class="forgot-password">
        <a href="/forget-patient-password">Forgot Password?</a>
      </div>
      <div class="button-container">
        <button type="submit">Login</button>
      </div>
      <div class="sign-up-link">
        New user? <a href="/signup">Sign Up</a>
      </div>
      <p id="errorMessage" style="display: none;"></p>
    </form>
