<body>
  <div class="container">
    <h1>Login</h1>
    <form id="loginForm" action="/api/user/login/patient" method="post">
      <div class="input-group">
        <label for="phoneNumber">Phone Number:<sup>*</sup></label>
        <input type="tel" id="phoneNumber" name="phoneNumber" required>
      </div>
      
