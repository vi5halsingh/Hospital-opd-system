<style>
.profile-picture {
    text-decoration: none;
    width: 60px;
    height: 60px;
    color: white;
    border: 2px solid black;
    border-radius: 50%;
    object-fit: cover;
}

@media only screen and (max-width: 768px) {
    .profile-picture {
        width: 50px;
        height: 50px;
    }
}
</style>

<% if (imageUrl) { %>
    <a href="/api/profile-picture">
        <img src="<%= imageUrl %>" alt="Profile Picture" class="profile-picture">
    </a>
<% } else { %>
    <a href="/api/profile-picture">
        <img src="/main page/asset/defalut user.jpg" alt="Default Profile" class="profile-picture">
    </a>
<% } %>