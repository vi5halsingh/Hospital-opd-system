        </div>
      </div>
      
    
      
      <section class="banner">
        <div class="slides-container">
          <div class="slide">
            <p>Connect with us and help each other <i class="fa-solid fa-people-group"></i> </p>
            <button><a href="#connect" style="text-decoration: none; color: #1AA75B;">Let's Begin</a></button>
          </div>
        </div>
      </section>
      
      
      <section class="quick-links">
        <div class="link link1" id="nearest-doctors">
          <img src="/main page/asset/doctors.png" alt="">
        <p>Nearest Doctors</p>
      </div>
          
        <div class="link" onclick="commingSoon()">
          <img src="/main page/asset/medical.png" alt="">
          <p>Get nearest medical</p>
        </div>
        <div class="link" onclick="bookAppointmnet()">
          <img src="/main page/asset/check.png" alt="">
          <p>Book Appointment</p>
        </div>
        <div class="link" onclick="commingSoon()">
          <img src="/main page/asset/category.png" alt="">
          <p>Category </p>
        </div>
      </section>
      
      <section class="categories">
        <div style="width: 99%; position: sticky; top:0; background-color: white; border-radius: 10px; z-index: 1;">
          <h1 style="text-align: center; font-size: 1rem;">Search quick for your need</h1>
        </div>
        <% const categories = ["Cardiologist", "Dermatologist", "Orthopedic Surgeon", "Pediatrician", "Neurologist", 
                               "Gynecologist", "Psychiatrist", "Ophthalmologist", "ENT Specialist", "Allergist", 
                               "Sexologist", "Dentist", "Oncologist", "Gastroenterologist", "Endocrinologist", 
                               "Rheumatologist", "Urologist", "Surgeon" ,"gernal physician"]; %>
        <% categories.forEach(category => { %>
          <div class="category">
            <a href="/specialty/<%= encodeURIComponent(category) %>" style="text-decoration: none; color: black;">
              <p><%= category %></p>
            </a>
          </div>
        <% }) %>
      </section>
        <!-- Statistics Section -->
        <section class="stats-section">
          <div class="stats-container">
            <div class="stat-card">
              <div class="stat-number"><%= totalDoctors %></div>
              <div class="stat-label">Expert Doctors</div>
            </div>
            <div class="stat-card">
              <div class="stat-number"><%= totalPatients %></div>
              <div class="stat-label">Happy Patients</div>
            </div>
            <div class="stat-card">
              <div class="stat-number"><%= totalAppointments %></div>
              <div class="stat-label">Appointments</div>
            </div>
            <div class="stat-card">
              <div class="stat-number"><%= successRate %>%</div>
              <div class="stat-label">Success Rate</div>
            </div>
            <!-- <div class="stat-card">
              <div class="stat-number"><%= todaysAppointments %></div>
              <div class="stat-label">Today's Appointments</div>
            </div> -->
          </div>
        </section>
    </div>
    
    <!-- Featured Doctors Section -->
    <section class="featured-section">
      <div class="featured-container">
        <h2 class="section-title">Our Expert Doctors</h2>
        <% if (featuredDoctors && featuredDoctors.length > 0) { %>
          <div class="doctors-grid">
            <% featuredDoctors.forEach(doctor => { %>
              <div class="doctor-card">
                <div class="doctor-header">
                  <% if (doctor.imageUrl) { %>
                    <img src="<%= doctor.imageUrl %>" alt="<%= doctor.firstName %>" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover; margin-right: 1rem;">
                  <% } else { %>
                    <div class="doctor-avatar">
                      <%= doctor.firstName.charAt(0) %><%= doctor.lastName.charAt(0) %>
                    </div>
                  <% } %>
                  <div class="doctor-info">
                    <h3><%= doctor.title %> <%= doctor.firstName %> <%= doctor.lastName %></h3>
                    <div class="doctor-specialty"><%= doctor.specialty %></div>
                  </div>
                </div>
                <div class="doctor-stats">
                  <div class="stat-item">
                    <div class="stat-value"><%= doctor.appointmentCount %></div>
                    <div class="stat-label-small">Appointments</div>
                  </div>
                  <div class="stat-item">
                    <div class="stat-value"><%= doctor.workInfo ? doctor.workInfo.experience : 'N/A' %></div>
                    <div class="stat-label-small">Years Exp.</div>
                  </div>
                  <div class="stat-item">
                    <div class="stat-value"><%= doctor.workInfo ? doctor.workInfo.hospital : 'N/A' %></div>
                    <div class="stat-label-small">Hospital</div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-user-md"></i>
            <h3>No doctors available at the moment</h3>
            <p>Check back later for our expert medical professionals</p>
          </div>
        <% } %>
      </div>
    </section>
    
    <div id="services"></div>
    <span >
      <h1 id="our-services-heading">OUR SERVICES</h1>
    </span>
    <section class="our-services">
      <div class="service">
        <div class="card123">
