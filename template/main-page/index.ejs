        </div>
      </div>
      <div class="service">
        <div class="card123">
          <h2><i class="fas fa-hands-helping"></i> Hospital Assistance</h2>
          <p>Get assistance with hospital services and patient care by booking online.</p>
          <a href="/comming-soon"> ></a>
        </div>
      </div>
      <div class="service">
        <div class="card123">
          <h2><i class="fas fa-heartbeat"></i> Required Free Checkup</h2>
          <p>Require a free health checkup? Book online and stay proactive.</p>
          <a href="/comming-soon"> ></a>
        </div>
      </div>
      
    </section>

    <!-- Recent Reviews Section -->
    <section class="reviews-section">
      <div class="featured-container">
        <h2 class="section-title">What Our Patients Say</h2>
        <% if (recentReviews && recentReviews.length > 0) { %>
          <div class="reviews-grid">
            <% recentReviews.forEach(review => { %>
              <div class="review-card">
                <div class="review-header">
                  <% if (review.imageUrl) { %>
                    <img src="<%= review.imageUrl %>" alt="<%= review.createdBy.firstName %>" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; margin-right: 1rem;">
                  <% } else { %>
                    <div class="reviewer-avatar">
                      <%= review.createdBy.firstName.charAt(0) %><%= review.createdBy.lastName.charAt(0) %>
                    </div>
                  <% } %>
                  <div class="reviewer-info">
                    <h4><%= review.createdBy.firstName %> <%= review.createdBy.lastName %></h4>
                    <div class="review-date"><%= new Date(review.createdAt).toLocaleDateString() %></div>
                  </div>
                </div>
                <div class="review-content">
                  "<%= review.content %>"
                </div>
                <% if (review.doctorId) { %>
                  <div class="review-doctor">
                    - Dr. <%= review.doctorId.firstName %> <%= review.doctorId.lastName %> (<%= review.doctorId.specialty %>)
                  </div>
                <% } %>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-comments"></i>
            <h3>No reviews yet</h3>
            <p>Be the first to share your experience with our doctors</p>
          </div>
        <% } %>
      </div>
    </section>

